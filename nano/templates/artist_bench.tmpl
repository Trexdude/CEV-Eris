<!-- 
Title: Artist's bench, largely from Autolathe.tmpl
Used In File(s): \code\game\machinery\autolathe\artist_bench.dm
 -->

<div style="display: table; width:100%">

<div style="display: table-row">
	<div class="fixedLeft" style="width:48%; display: table-cell; padding: 0 1%">
		<div class="display">
			<header><h3>Loaded materials</h3></header>

			<article>
			{{for data.materials}}
				<section>
					<span class="label">{{:value.name.toTitleCase()}}</span>
					<div class="content">{{:Math.round(value.amount * 100) / 100}}/{{:data.mat_capacity}}</div>
					<div class="content">{{:helper.link('', 'eject', {'eject_material' : value.id}, null, 'statusValue')}}</div>
				</section>
			{{empty}}
				<section>
					<span class="label">None loaded</span>
				</section>
			{{/for}}
				<section>
					<div class="content">{{:helper.link('INSERT MATERIALS', '', {'insert' : 1}, null, 'bigButton')}}</div>
				</section>
			</article>
		</div>
	</div>
</div>

<div class="fixedWidest" style="width:100%; display: table-row">
	<div class="block">
		<div class="item">
			<div class="itemContentWide">
			Model Oddity: 
			{{if data.strange_item_name}}
				<b>{{:data.strange_item_name ? data.strange_item_name :'data strange_item_name'}}</b>
			{{else}}
				none
			{{/if}}
			</div>
			<div class="itemlabelNarrow">{{:helper.link(data.strange_item_name ? 'remove' : 'insert', 'remove', {'strange_item_name' : 1}, null, 'statusValue')}}</div>
			{{if data.strange_item_stats}}
				<div class="itemContentWide">
					<header>Model Oddity Stats:</header>
					{{for data.strange_item_stats}}
						<div class="itemContentWide">
						{{if {{:value.level}} >= 10}}
							<span style="color:gold;"><b>Overwhelming</b></span> aspect of 
						{{else {{:value.level}} >= 6}}
							<span style="color:red;"><b>Strong</b></span> aspect of 
						{{else {{:value.level}} >= 3}}
							<span style="color:green;"><b>Medium</b></span> aspect of 
						{{else value.level >= 1}}
							<span style="color:blue;"><b>Weak</b></span> aspect of 
						{{/if}}
						<b>{{:value.name}}</b>
						</div>
					{{/for}}
				</div>
			{{/if}}
		</div>
	</div>
</div>

<div class="fixedWidest" style="width:100%; display: table-row">
	<div class="block" style="padding: 0px 4px 2px 4px">
		<div class="item">
			<div class="content">{{:helper.link('Create Art', '', {'create_art' : 1}, null, 'bigButton')}}</div>
		</div>
	</div>
</div>

</div>